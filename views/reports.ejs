<%- include('partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="dashboard-header">
            <h1>My Reports</h1>
            <p>Track the status of your cybercrime reports</p>
        </div>

        <div class="dashboard-actions">
            <a href="/report/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Report
            </a>
        </div>

        <% if (reports.length > 0) { %>
            <div class="reports-list">
                <% reports.forEach(function(report) { %>
                <div class="report-item">
                    <div class="report-info">
                        <h4><%= report.incident_type %></h4>
                        <p><%= report.description.substring(0, 150) %>...</p>
                        <small>
                            <i class="fas fa-calendar"></i> Submitted: <%= new Date(report.created_at).toLocaleDateString() %>
                            | <i class="fas fa-clock"></i> Incident Date: <%= new Date(report.incident_date).toLocaleDateString() %>
                        </small>
                    </div>
                    <div class="report-status">
                        <span class="status-badge status-<%= report.status %>">
                            <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                        </span>
                        <a href="/report/<%= report.id %>" class="btn btn-sm">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No reports submitted yet</h3>
                <p>Start by reporting your first cybercrime incident to help make the internet safer</p>
                <a href="/report/new" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Submit Your First Report
                </a>
            </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>