<%- include('partials/header') %>

<main class="main-content">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-file-alt"></i> Report Details</h1>
            <p>Report ID: #<%= report.id %></p>
        </div>

        <div class="report-form">
            <div class="form-section">
                <h3>Report Information</h3>
                
                <div class="report-detail-grid">
                    <div class="detail-item">
                        <label>Incident Type:</label>
                        <span><%= report.incident_type %></span>
                    </div>
                    
                    <div class="detail-item">
                        <label>Incident Date:</label>
                        <span><%= new Date(report.incident_date).toLocaleDateString() %></span>
                    </div>
                    
                    <div class="detail-item">
                        <label>Status:</label>
                        <span class="status-badge status-<%= report.status %>">
                            <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                        </span>
                    </div>
                    
                    <div class="detail-item">
                        <label>Submitted On:</label>
                        <span><%= new Date(report.created_at).toLocaleDateString() %></span>
                    </div>
                </div>
                
                <div class="detail-item full-width">
                    <label>Description:</label>
                    <div class="description-box">
                        <%= report.description %>
                    </div>
                </div>
                
                <% if (report.evidence_file) { %>
                <div class="detail-item full-width">
                    <label>Evidence:</label>
                    <div class="evidence-section">
                        <i class="fas fa-paperclip"></i>
                        <a href="/uploads/<%= report.evidence_file %>" target="_blank">
                            View Evidence File
                        </a>
                    </div>
                </div>
                <% } %>
            </div>

            <% if (report.admin_response) { %>
            <div class="form-section">
                <h3>Official Response</h3>
                <div class="response-box">
                    <i class="fas fa-reply"></i>
                    <div class="response-content">
                        <p><%= report.admin_response %></p>
                        <small>Last updated: <%= new Date(report.updated_at).toLocaleDateString() %></small>
                    </div>
                </div>
            </div>
            <% } %>

            <div class="form-actions">
                <a href="/reports" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Reports
                </a>
                <% if (report.status === 'pending' || report.status === 'review') { %>
                <span class="status-info">
                    <i class="fas fa-info-circle"></i>
                    Your report is being processed. You will be notified of any updates.
                </span>
                <% } %>
            </div>
        </div>
    </div>
</main>

<style>
.report-detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.detail-item.full-width {
    grid-column: 1 / -1;
}

.detail-item label {
    font-weight: 600;
    color: #555;
}

.detail-item span {
    color: #333;
}

.description-box {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 5px;
    border-left: 4px solid #3498db;
    white-space: pre-wrap;
}

.evidence-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background-color: #f8f9fa;
    border-radius: 5px;
}

.evidence-section a {
    color: #3498db;
    text-decoration: none;
}

.evidence-section a:hover {
    text-decoration: underline;
}

.response-box {
    background-color: #e8f5e8;
    border: 1px solid #c3e6cb;
    border-radius: 5px;
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
}

.response-box i {
    color: #28a745;
    font-size: 1.2rem;
    margin-top: 0.2rem;
}

.response-content p {
    margin-bottom: 0.5rem;
    color: #155724;
}

.response-content small {
    color: #6c757d;
}

.status-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6c757d;
    font-style: italic;
}
</style>

<%- include('partials/footer') %>