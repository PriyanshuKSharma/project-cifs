<%- include('partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="form-header">
            <h1><i class="fas fa-shield-alt"></i> Cybersecurity Prevention Tips</h1>
            <p>Stay safe online with these expert recommendations</p>
        </div>

        <% if (tips.length > 0) { %>
            <div class="tips-grid">
                <% tips.forEach(function(tip) { %>
                <div class="tip-card">
                    <h3>
                        <i class="fas fa-lightbulb"></i>
                        <%= tip.title %>
                    </h3>
                    <p><%= tip.content %></p>
                    <small style="display: block; margin-top: 1rem; opacity: 0.7;">
                        <i class="fas fa-calendar"></i>
                        Published: <%= new Date(tip.created_at).toLocaleDateString() %>
                    </small>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-lightbulb"></i>
                <h3>No tips available</h3>
                <p>Check back later for cybersecurity prevention tips</p>
            </div>
        <% } %>

        <div style="margin-top: 4rem;">
            <h2 style="font-size: 2rem; font-weight: 700; text-align: center; margin-bottom: 2rem;">Additional Resources</h2>
            <div class="feature-grid">
                <div class="feature-card">
                    <i class="fas fa-phone"></i>
                    <h3>Emergency Helpline</h3>
                    <p>Call 1930 for immediate cybercrime assistance</p>
                    <span class="status-badge status-resolved" style="margin-top: 1rem; display: inline-block;">24/7 Available</span>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-envelope"></i>
                    <h3>Email Support</h3>
                    <p>Send detailed reports to our cybercrime unit</p>
                    <span class="status-badge status-review" style="margin-top: 1rem; display: inline-block;">report@cybercrime.gov.in</span>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-globe"></i>
                    <h3>Official Portal</h3>
                    <p>Visit the national cybercrime reporting portal</p>
                    <span class="status-badge status-review" style="margin-top: 1rem; display: inline-block;">cybercrime.gov.in</span>
                </div>
                
                <div class="feature-card">
                    <i class="fas fa-users"></i>
                    <h3>Community Support</h3>
                    <p>Join our cybersecurity awareness programs</p>
                    <span class="status-badge status-pending" style="margin-top: 1rem; display: inline-block;">Local Workshops</span>
                </div>
            </div>
        </div>

        <div class="card" style="margin-top: 4rem;">
            <h2 style="font-size: 2rem; font-weight: 700; text-align: center; margin-bottom: 2rem;">Quick Safety Checklist</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1rem;">
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Use strong, unique passwords for all accounts</span>
                </div>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Enable two-factor authentication where possible</span>
                </div>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Keep software and operating systems updated</span>
                </div>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Be cautious with email attachments and links</span>
                </div>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Use secure networks for sensitive transactions</span>
                </div>
                <div style="display: flex; align-items: center; gap: 1rem; padding: 1rem; background: var(--dark); border: 1px solid var(--border); border-radius: 10px; transition: all 0.3s;">
                    <i class="fas fa-check-circle" style="font-size: 1.5rem; color: var(--success);"></i>
                    <span>Regularly backup important data</span>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>