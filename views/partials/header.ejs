<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Cybercrime Prevention Portal' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/"><i class="fas fa-shield-alt"></i> CyberGuard</a>
            </div>
            <ul class="nav-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/tips">Prevention Tips</a></li>
                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <li><a href="/admin/dashboard">Admin Dashboard</a></li>
                        <li><a href="/admin/reports">Manage Reports</a></li>
                    <% } else { %>
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/report/new">Report Crime</a></li>
                        <li><a href="/reports">My Reports</a></li>
                    <% } %>
                    <li><a href="/logout">Logout (<%= user.name %>)</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <% if (messages.success) { %>
        <div class="alert alert-success">
            <% messages.success.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-error">
            <% messages.error.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>