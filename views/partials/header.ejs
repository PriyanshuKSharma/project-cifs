<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Cybercrime Prevention Portal' %></title>
    <!-- Use built Tailwind CSS (generated into public/css/tailwind.css) -->
    <link rel="stylesheet" href="/css/tailwind.css">
    <!-- Legacy small overrides / theme styles -->
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --color-primary: rgb(79 70 229);
            --color-secondary: rgb(234 88 12);
            --color-info: rgb(37 99 235);
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">
                    <i class="fas fa-shield-alt"></i>
                    <span>CyberGuard</span>
                </a>
            </div>
            
            <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
                <i class="fas fa-bars"></i>
            </button>
            
            <ul class="nav-menu" id="navMenu">
                <li><a href="/"><i class="fas fa-home"></i> Home</a></li>
                <li><a href="/tips"><i class="fas fa-lightbulb"></i> Prevention Tips</a></li>
                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <li><a href="/admin/reports"><i class="fas fa-folder-open"></i> Reports</a></li>
                        <li><a href="/admin/tips"><i class="fas fa-cog"></i> Manage Tips</a></li>
                    <% } else { %>
                        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                        <li><a href="/reports"><i class="fas fa-folder-open"></i> My Reports</a></li>
                        <li><a href="/report/new" class="btn btn-primary btn-sm"><i class="fas fa-exclamation-triangle"></i> Report Crime</a></li>
                    <% } %>
                    <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                <% } else { %>
                    <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                    <li><a href="/register" class="btn btn-primary btn-sm"><i class="fas fa-user-plus"></i> Register</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <% if (messages.success) { %>
        <div class="alert alert-success" id="successAlert">
            <i class="fas fa-check-circle"></i>
            <div>
                <% messages.success.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        </div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-error" id="errorAlert">
            <i class="fas fa-exclamation-circle"></i>
            <div>
                <% messages.error.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        </div>
    <% } %>
    
    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('navMenu');
            menu.classList.toggle('active');
        }
        
        // Auto-dismiss alerts after 5 seconds
        setTimeout(() => {
            const successAlert = document.getElementById('successAlert');
            const errorAlert = document.getElementById('errorAlert');
            if (successAlert) {
                successAlert.style.animation = 'slideUp 0.3s ease-out';
                setTimeout(() => successAlert.remove(), 300);
            }
            if (errorAlert) {
                errorAlert.style.animation = 'slideUp 0.3s ease-out';
                setTimeout(() => errorAlert.remove(), 300);
            }
        }, 5000);
    </script>