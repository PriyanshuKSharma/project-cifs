<%- include('partials/header') %>

<main class="main-content">
    <div class="auth-container">
        <div class="auth-card fade-in-up">
            <div class="auth-header">
                <div style="text-align: center; margin-bottom: 1rem;">
                    <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-shield-alt" style="font-size: 2rem; color: white;"></i>
                    </div>
                </div>
                <h2 style="color: white; margin-bottom: 0.5rem; font-family: 'Space Grotesk', sans-serif; font-weight: 900; font-size: 2.2rem; text-transform: uppercase; letter-spacing: 0.1em;">QUANTUM ACCESS</h2>
                <p style="color: rgba(255,255,255,0.8); font-size: 1.1rem;">Neural interface authentication required</p>
            </div>
            
            <form action="/login" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <button type="submit" class="btn btn-primary btn-full">Login</button>
            </form>
            
            <div class="auth-footer">
                <p style="text-align: center; color: rgba(255,255,255,0.8);">New to CyberGuard Pro? <a href="/register" style="color: #06b6d4; font-weight: 700; text-decoration: none; font-family: 'Space Grotesk', sans-serif;">Join Elite Network →</a></p>
                <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid rgba(113,128,150,0.2);">
                    <small style="color: rgba(255,255,255,0.6); font-weight: 500;">Military-grade encryption • Zero-knowledge architecture</small>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>