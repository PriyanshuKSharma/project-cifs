<%- include('partials/header') %>

<main class="space-y-20 mb-20">
    <!-- Hero Section -->
    <div class="relative" id="home">
        <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
            <div class="blur-[106px] h-56 bg-gradient-to-br from-indigo-600 to-purple-400 dark:from-blue-700"></div>
            <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
        </div>
        <div class="max-w-7xl mx-auto px-6">
            <div class="relative pt-36 pb-20">
                <div class="text-center">
                    <% if (user) { %>
                        <h1 class="text-gray-900 dark:text-white font-bold text-4xl md:text-5xl xl:text-6xl mb-6">
                            Welcome back, <span class="text-indigo-600 dark:text-indigo-400"><%= user.name %></span>
                        </h1>
                        <p class="text-xl text-gray-700 dark:text-gray-300 mb-12 max-w-3xl mx-auto">
                            <% if (user.role === 'admin') { %>
                                Manage cybercrime reports and keep our community safe.
                            <% } else { %>
                                Your cybercrime prevention dashboard. Stay protected and report incidents safely.
                            <% } %>
                        </p>
                    <% } else { %>
                        <h1 class="text-gray-900 text-balance dark:text-white font-bold text-5xl md:text-6xl xl:text-7xl mb-8">
                            Protecting citizens from <span class="text-indigo-600 dark:text-indigo-400">cybercrime.</span>
                        </h1>
                        <p class="text-xl text-gray-700 dark:text-gray-300 mb-12 max-w-4xl mx-auto">
                            Report cybercrime incidents safely and get help from our expert team. We're here to protect you and help make the internet safer for everyone.
                        </p>
                    <% } %>
                    
                    <!-- Action Buttons -->
                    <div class="flex flex-wrap justify-center gap-4 mb-16">
                        <% if (user) { %>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin/reports" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:bg-indigo-600 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                    <span class="relative text-base font-semibold text-white">
                                        <i class="fas fa-cog mr-2"></i>Manage Reports
                                    </span>
                                </a>
                                <a href="/admin/dashboard" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:border before:border-gray-300 dark:before:border-gray-600 before:bg-white/50 dark:before:bg-gray-800/50 before:backdrop-blur before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                    <span class="relative text-base font-semibold text-gray-900 dark:text-white">
                                        <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
                                    </span>
                                </a>
                            <% } else { %>
                                <a href="/report/new" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:bg-red-600 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                    <span class="relative text-base font-semibold text-white">
                                        <i class="fas fa-plus mr-2"></i>Report Crime
                                    </span>
                                </a>
                                <a href="/reports" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:border before:border-gray-300 dark:before:border-gray-600 before:bg-white/50 dark:before:bg-gray-800/50 before:backdrop-blur before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                    <span class="relative text-base font-semibold text-gray-900 dark:text-white">
                                        <i class="fas fa-folder-open mr-2"></i>My Reports
                                    </span>
                                </a>
                            <% } %>
                        <% } else { %>
                            <a href="/report/new" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:bg-red-600 before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                <span class="relative text-base font-semibold text-white">Report Crime</span>
                            </a>
                            <a href="/register" class="relative flex h-12 items-center justify-center px-8 before:absolute before:inset-0 before:rounded-full before:border before:border-gray-300 dark:before:border-gray-600 before:bg-white/50 dark:before:bg-gray-800/50 before:backdrop-blur before:transition before:duration-300 hover:before:scale-105 active:duration-75 active:before:scale-95">
                                <span class="relative text-base font-semibold text-gray-900 dark:text-white">Get Started</span>
                            </a>
                        <% } %>
                    </div>
                    
                    <!-- Stats for logged-in users -->
                    <% if (user) { %>
                        <% if (user.role === 'admin' && typeof stats !== 'undefined') { %>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400"><%= stats.total %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Total Reports</div>
                                </div>
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400"><%= stats.pending %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Pending</div>
                                </div>
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-blue-600 dark:text-blue-400"><%= stats.review %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Under Review</div>
                                </div>
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-green-600 dark:text-green-400"><%= stats.resolved %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Resolved</div>
                                </div>
                            </div>
                        <% } else if (typeof reports !== 'undefined') { %>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-2xl mx-auto">
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400"><%= reports.length %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">My Reports</div>
                                </div>
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400"><%= reports.filter(r => r.status === 'pending').length %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Pending</div>
                                </div>
                                <div class="bg-white/80 dark:bg-gray-800/80 backdrop-blur rounded-2xl p-6 border border-white/20 dark:border-gray-700/50">
                                    <div class="text-3xl font-bold text-green-600 dark:text-green-400"><%= reports.filter(r => r.status === 'resolved').length %></div>
                                    <div class="text-gray-600 dark:text-gray-300 text-sm font-medium">Resolved</div>
                                </div>
                            </div>
                        <% } %>