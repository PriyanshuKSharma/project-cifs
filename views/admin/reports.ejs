<%- include('../partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="dashboard-header">
            <h1><i class="fas fa-list"></i> Manage Reports</h1>
            <p>Review and update cybercrime reports</p>
        </div>

        <div class="filter-section">
            <div class="filter-buttons">
                <button class="filter-btn active" data-status="all">All Reports</button>
                <button class="filter-btn" data-status="pending">Pending</button>
                <button class="filter-btn" data-status="review">Under Review</button>
                <button class="filter-btn" data-status="resolved">Resolved</button>
                <button class="filter-btn" data-status="rejected">Rejected</button>
            </div>
        </div>

        <% if (reports.length > 0) { %>
            <div class="reports-grid">
                <% reports.forEach(function(report) { %>
                <div class="report-card" data-status="<%= report.status %>">
                    <div class="card-header">
                        <div class="report-id">#<%= report.id %></div>
                        <span class="status-badge status-<%= report.status %>">
                            <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                        </span>
                    </div>
                    
                    <div class="card-content">
                        <div class="reporter-section">
                            <h4><%= report.user_name %></h4>
                            <p><%= report.user_email %></p>
                        </div>
                        
                        <div class="incident-info">
                            <div class="info-item">
                                <label>Incident Type:</label>
                                <span><%= report.incident_type %></span>
                            </div>
                            <div class="info-item">
                                <label>Reported:</label>
                                <span><%= new Date(report.created_at).toLocaleDateString() %></span>
                            </div>
                            <div class="info-item">
                                <label>Incident Date:</label>
                                <span><%= new Date(report.incident_date).toLocaleDateString() %></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-actions">
                        <a href="/admin/report/<%= report.id %>" class="review-btn">
                            <i class="fas fa-eye"></i> Review Report
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No reports found</h3>
                <p>Cybercrime reports will appear here when submitted by users</p>
            </div>
        <% } %>
    </div>
</main>

<style>
.filter-section {
    margin-bottom: 2rem;
    text-align: center;
}

.filter-buttons {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.75rem 1.5rem;
    border: 2px solid rgba(0, 212, 255, 0.5);
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(255, 0, 128, 0.05));
    color: #00d4ff !important;
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s;
    font-weight: 600;
    backdrop-filter: blur(10px);
}

.filter-btn:hover,
.filter-btn.active {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.3), rgba(255, 0, 128, 0.2));
    color: #0f3460 !important;
    border-color: rgba(0, 212, 255, 0.8);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 212, 255, 0.3);
}

.reports-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 2rem;
}

.report-card {
    background: linear-gradient(145deg, #1a1a2e, #16213e);
    border: 2px solid rgba(0, 212, 255, 0.2);
    border-radius: 25px;
    padding: 0;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
    transition: all 0.3s ease;
    overflow: hidden;
    position: relative;
}

.report-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #00d4ff, #ff0080, #00ff88);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
}

.report-card:hover {
    transform: translateY(-10px) scale(1.02);
    border-color: rgba(0, 212, 255, 0.5);
    box-shadow: 0 25px 60px rgba(0, 212, 255, 0.3);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background: rgba(0, 0, 0, 0.2);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.report-id {
    font-size: 1.2rem;
    font-weight: 800;
    color: #00d4ff !important;
    font-family: 'Space Grotesk', sans-serif;
}

.card-content {
    padding: 2rem;
}

.reporter-section {
    margin-bottom: 1.5rem;
}

.reporter-section h4 {
    color: #ffffff !important;
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.reporter-section p {
    color: rgba(255, 255, 255, 0.7) !important;
    font-size: 0.95rem;
}

.incident-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.info-item label {
    color: rgba(255, 255, 255, 0.7) !important;
    font-weight: 600;
    font-size: 0.9rem;
}

.info-item span {
    color: #ffffff !important;
    font-weight: 600;
}

.card-actions {
    padding: 1.5rem 2rem;
    background: rgba(0, 0, 0, 0.2);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.review-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #00d4ff, #0099cc);
    color: #ffffff !important;
    text-decoration: none;
    border-radius: 15px;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    border: none;
}

.review-btn:hover {
    background: linear-gradient(135deg, #0099cc, #00d4ff);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 212, 255, 0.4);
}

.report-card[style*="display: none"] {
    display: none !important;
}

@media (max-width: 768px) {
    .reports-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .report-card {
        margin: 0 1rem;
    }
    
    .filter-buttons {
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }
    
    .filter-btn {
        width: 200px;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const reportRows = document.querySelectorAll('.report-row');

    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            // Remove active class from all buttons
            filterButtons.forEach(btn => btn.classList.remove('active'));
            // Add active class to clicked button
            this.classList.add('active');

            const filterStatus = this.getAttribute('data-status');

            reportRows.forEach(row => {
                if (filterStatus === 'all' || row.getAttribute('data-status') === filterStatus) {
                    row.style.display = 'block';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    });
});
</script>

<%- include('../partials/footer') %>