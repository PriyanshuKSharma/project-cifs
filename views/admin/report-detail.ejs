<%- include('../partials/header') %>

<main class="main-content">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-gavel"></i> Review Report</h1>
            <p>Report ID: #<%= report.id %> | Reporter: <%= report.user_name %></p>
        </div>

        <div class="admin-report-container">
            <div class="report-details">
                <div class="form-section">
                    <h3>Report Information</h3>
                    
                    <div class="report-detail-grid">
                        <div class="detail-item">
                            <label>Reporter Name:</label>
                            <span><%= report.user_name %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Reporter Email:</label>
                            <span><%= report.user_email %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Incident Type:</label>
                            <span><%= report.incident_type %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Incident Date:</label>
                            <span><%= new Date(report.incident_date).toLocaleDateString() %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Current Status:</label>
                            <span class="status-badge status-<%= report.status %>">
                                <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                            </span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Submitted On:</label>
                            <span><%= new Date(report.created_at).toLocaleDateString() %></span>
                        </div>
                    </div>
                    
                    <div class="detail-item full-width">
                        <label>Description:</label>
                        <div class="description-box">
                            <%= report.description %>
                        </div>
                    </div>
                    
                    <% if (report.evidence_file) { %>
                    <div class="detail-item full-width">
                        <label>Evidence:</label>
                        <div class="evidence-section">
                            <i class="fas fa-paperclip"></i>
                            <a href="/uploads/<%= report.evidence_file %>" target="_blank">
                                <i class="fas fa-external-link-alt"></i> View Evidence File
                            </a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="admin-actions">
                <div class="form-section">
                    <h3>Update Report Status</h3>
                    
                    <form action="/admin/report/<%= report.id %>/update" method="POST" class="update-form">
                        <div class="form-group">
                            <label for="status">Status *</label>
                            <select id="status" name="status" required>
                                <option value="pending" <%= report.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="review" <%= report.status === 'review' ? 'selected' : '' %>>Under Review</option>
                                <option value="resolved" <%= report.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                <option value="rejected" <%= report.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="admin_response">Response to Reporter</label>
                            <textarea id="admin_response" name="admin_response" rows="5" 
                                      placeholder="Provide feedback or updates to the reporter..."><%= report.admin_response || '' %></textarea>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Report
                            </button>
                            <a href="/admin/reports" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Reports
                            </a>
                        </div>
                    </form>
                </div>

                <% if (report.admin_response) { %>
                <div class="form-section">
                    <h3>Previous Response</h3>
                    <div class="previous-response">
                        <div class="response-content">
                            <p><%= report.admin_response %></p>
                            <small>Last updated: <%= new Date(report.updated_at).toLocaleDateString() %></small>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="action-history">
            <h3>Quick Actions</h3>
            <div class="quick-actions">
                <button class="quick-action-btn" onclick="setStatus('review', 'Your report is now under review by our cybercrime experts. We will update you with our findings soon.')">
                    <i class="fas fa-eye"></i> Mark Under Review
                </button>
                <button class="quick-action-btn" onclick="setStatus('resolved', 'Your report has been successfully processed and resolved. Thank you for helping make the internet safer.')">
                    <i class="fas fa-check"></i> Mark Resolved
                </button>
                <button class="quick-action-btn" onclick="setStatus('rejected', 'After careful review, we were unable to proceed with this report. Please contact us if you have additional information.')">
                    <i class="fas fa-times"></i> Mark Rejected
                </button>
            </div>
        </div>
    </div>
</main>

<style>
.admin-report-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
}

.report-details,
.admin-actions {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.report-detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.detail-item.full-width {
    grid-column: 1 / -1;
}

.detail-item label {
    font-weight: 600;
    color: #555;
}

.detail-item span {
    color: #333;
}

.description-box {
    background-color: #f8f9fa;
    padding: 1rem;
    border-radius: 5px;
    border-left: 4px solid #3498db;
    white-space: pre-wrap;
}

.evidence-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background-color: #f8f9fa;
    border-radius: 5px;
}

.evidence-section a {
    color: #3498db;
    text-decoration: none;
}

.evidence-section a:hover {
    text-decoration: underline;
}

.update-form {
    margin-bottom: 2rem;
}

.previous-response {
    background-color: #e8f5e8;
    border: 1px solid #c3e6cb;
    border-radius: 5px;
    padding: 1rem;
}

.previous-response p {
    margin-bottom: 0.5rem;
    color: #155724;
}

.previous-response small {
    color: #6c757d;
}

.action-history {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.quick-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.quick-action-btn {
    padding: 0.75rem 1rem;
    border: 2px solid #3498db;
    background-color: transparent;
    color: #3498db;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s;
    font-size: 0.875rem;
}

.quick-action-btn:hover {
    background-color: #3498db;
    color: white;
}

@media (max-width: 768px) {
    .admin-report-container {
        grid-template-columns: 1fr;
    }
    
    .quick-actions {
        flex-direction: column;
    }
}
</style>

<script>
function setStatus(status, response) {
    document.getElementById('status').value = status;
    document.getElementById('admin_response').value = response;
}
</script>

<%- include('../partials/footer') %>