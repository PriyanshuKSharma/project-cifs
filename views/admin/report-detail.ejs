<%- include('../partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="form-header">
            <h1><i class="fas fa-gavel"></i> Review Report</h1>
            <p>Report ID: #<%= report.id %> | Reporter: <%= report.user_name %></p>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 400px; gap: 2rem; margin-bottom: 2rem;">
            <div class="card">
                <h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1.5rem; padding-bottom: 0.75rem; border-bottom: 2px solid var(--primary);">Report Information</h3>
                
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Reporter Name</label>
                        <span style="font-size: 1.1rem;"><%= report.user_name %></span>
                    </div>
                    
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Reporter Email</label>
                        <span style="font-size: 1.1rem;"><%= report.user_email %></span>
                    </div>
                    
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Incident Type</label>
                        <span style="font-size: 1.1rem;"><%= report.incident_type %></span>
                    </div>
                    
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Incident Date</label>
                        <span style="font-size: 1.1rem;"><%= new Date(report.incident_date).toLocaleDateString() %></span>
                    </div>
                    
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Current Status</label>
                        <span class="status-badge status-<%= report.status %>">
                            <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                        </span>
                    </div>
                    
                    <div>
                        <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Submitted On</label>
                        <span style="font-size: 1.1rem;"><%= new Date(report.created_at).toLocaleDateString() %></span>
                    </div>
                </div>
                
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Description</label>
                    <div style="background: var(--dark); padding: 1.5rem; border-radius: 10px; border-left: 4px solid var(--primary); line-height: 1.6;">
                        <%= report.description %>
                    </div>
                </div>
                
                <% if (report.evidence_file) { %>
                <div>
                    <label style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-muted);">Evidence</label>
                    <div style="background: rgba(16, 185, 129, 0.1); padding: 1rem; border-radius: 10px; border: 1px solid var(--success); display: flex; align-items: center; gap: 1rem;">
                        <i class="fas fa-paperclip" style="color: var(--success); font-size: 1.5rem;"></i>
                        <a href="/uploads/<%= report.evidence_file %>" target="_blank" style="color: var(--success); text-decoration: none; font-weight: 600;">
                            <i class="fas fa-external-link-alt"></i> View Evidence File
                        </a>
                    </div>
                </div>
                <% } %>
            </div>

            <div>
                <div class="card" style="margin-bottom: 2rem;">
                    <h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1.5rem; padding-bottom: 0.75rem; border-bottom: 2px solid var(--primary);">Update Status</h3>
                    
                    <form action="/admin/report/<%= report.id %>/update" method="POST" class="update-form">
                        <div class="form-group">
                            <label for="status">Status *</label>
                            <select id="status" name="status" required>
                                <option value="pending" <%= report.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="review" <%= report.status === 'review' ? 'selected' : '' %>>Under Review</option>
                                <option value="resolved" <%= report.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                <option value="rejected" <%= report.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="admin_response">Response to Reporter</label>
                            <textarea id="admin_response" name="admin_response" rows="5" 
                                      placeholder="Provide feedback or updates to the reporter..."><%= report.admin_response || '' %></textarea>
                        </div>

                        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Report
                            </button>
                            <a href="/admin/reports" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Reports
                            </a>
                        </div>
                    </form>
                </div>

                <% if (report.admin_response) { %>
                <div class="card">
                    <h3 style="font-size: 1.25rem; font-weight: 600; margin-bottom: 1rem;">Previous Response</h3>
                    <div style="background: rgba(245, 158, 11, 0.1); padding: 1rem; border-radius: 10px; border: 1px solid var(--warning);">
                        <p style="margin-bottom: 0.5rem;"><%= report.admin_response %></p>
                        <small style="color: var(--text-muted);">Last updated: <%= new Date(report.updated_at).toLocaleDateString() %></small>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="card">
            <h3 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 1.5rem; text-align: center;">âš¡ Quick Actions</h3>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem;">
                <button class="btn btn-primary" style="background: linear-gradient(135deg, rgba(52, 152, 219, 0.3), rgba(41, 128, 185, 0.4)); border-color: var(--primary);" onclick="setStatus('review', 'Your report is now under review by our cybercrime experts. We will update you with our findings soon.')">
                    <i class="fas fa-eye"></i>
                    <span>Mark Under Review</span>
                </button>
                <button class="btn btn-primary" style="background: linear-gradient(135deg, rgba(16, 185, 129, 0.3), rgba(5, 150, 105, 0.4)); border-color: var(--success);" onclick="setStatus('resolved', 'Your report has been successfully processed and resolved. Thank you for helping make the internet safer.')">
                    <i class="fas fa-check"></i>
                    <span>Mark Resolved</span>
                </button>
                <button class="btn btn-primary" style="background: linear-gradient(135deg, rgba(239, 68, 68, 0.3), rgba(220, 38, 38, 0.4)); border-color: var(--danger);" onclick="setStatus('rejected', 'After careful review, we were unable to proceed with this report. Please contact us if you have additional information.')">
                    <i class="fas fa-times"></i>
                    <span>Mark Rejected</span>
                </button>
            </div>
        </div>
    </div>
</main>



<script>
function setStatus(status, response) {
    // Set the form values
    document.getElementById('status').value = status;
    document.getElementById('admin_response').value = response;
    
    // Auto-submit the form
    document.querySelector('.update-form').submit();
}
</script>

<%- include('../partials/footer') %>