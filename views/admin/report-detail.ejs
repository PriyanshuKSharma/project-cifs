<%- include('../partials/header') %>

<main class="main-content">
    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-gavel"></i> Review Report</h1>
            <p>Report ID: #<%= report.id %> | Reporter: <%= report.user_name %></p>
        </div>

        <div class="admin-report-container">
            <div class="report-details">
                <div class="form-section">
                    <h3>Report Information</h3>
                    
                    <div class="report-detail-grid">
                        <div class="detail-item">
                            <label>Reporter Name:</label>
                            <span><%= report.user_name %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Reporter Email:</label>
                            <span><%= report.user_email %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Incident Type:</label>
                            <span><%= report.incident_type %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Incident Date:</label>
                            <span><%= new Date(report.incident_date).toLocaleDateString() %></span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Current Status:</label>
                            <span class="status-badge status-<%= report.status %>">
                                <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                            </span>
                        </div>
                        
                        <div class="detail-item">
                            <label>Submitted On:</label>
                            <span><%= new Date(report.created_at).toLocaleDateString() %></span>
                        </div>
                    </div>
                    
                    <div class="detail-item full-width">
                        <label>Description:</label>
                        <div class="description-box">
                            <%= report.description %>
                        </div>
                    </div>
                    
                    <% if (report.evidence_file) { %>
                    <div class="detail-item full-width">
                        <label>Evidence:</label>
                        <div class="evidence-section">
                            <i class="fas fa-paperclip"></i>
                            <a href="/uploads/<%= report.evidence_file %>" target="_blank">
                                <i class="fas fa-external-link-alt"></i> View Evidence File
                            </a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>

            <div class="admin-actions">
                <div class="form-section">
                    <h3>Update Report Status</h3>
                    
                    <form action="/admin/report/<%= report.id %>/update" method="POST" class="update-form">
                        <div class="form-group">
                            <label for="status">Status *</label>
                            <select id="status" name="status" required>
                                <option value="pending" <%= report.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="review" <%= report.status === 'review' ? 'selected' : '' %>>Under Review</option>
                                <option value="resolved" <%= report.status === 'resolved' ? 'selected' : '' %>>Resolved</option>
                                <option value="rejected" <%= report.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="admin_response">Response to Reporter</label>
                            <textarea id="admin_response" name="admin_response" rows="5" 
                                      placeholder="Provide feedback or updates to the reporter..."><%= report.admin_response || '' %></textarea>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update Report
                            </button>
                            <a href="/admin/reports" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Reports
                            </a>
                        </div>
                    </form>
                </div>

                <% if (report.admin_response) { %>
                <div class="form-section">
                    <h3>Previous Response</h3>
                    <div class="previous-response">
                        <div class="response-content">
                            <p><%= report.admin_response %></p>
                            <small>Last updated: <%= new Date(report.updated_at).toLocaleDateString() %></small>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="action-history">
            <h3 style="animation: 0.3s ease-in-out 0s 1 normal none running glitch;">âš¡ Quick Actions</h3>
            <div class="quick-actions">
                <button class="quick-action-btn review-btn" onclick="setStatus('review', 'Your report is now under review by our cybercrime experts. We will update you with our findings soon.')">
                    <div class="btn-glow"></div>
                    <i class="fas fa-eye"></i>
                    <span>Mark Under Review</span>
                    <div class="btn-particles"></div>
                </button>
                <button class="quick-action-btn resolved-btn" onclick="setStatus('resolved', 'Your report has been successfully processed and resolved. Thank you for helping make the internet safer.')">
                    <div class="btn-glow"></div>
                    <i class="fas fa-check"></i>
                    <span>Mark Resolved</span>
                    <div class="btn-particles"></div>
                </button>
                <button class="quick-action-btn rejected-btn" onclick="setStatus('rejected', 'After careful review, we were unable to proceed with this report. Please contact us if you have additional information.')">
                    <div class="btn-glow"></div>
                    <i class="fas fa-times"></i>
                    <span>Mark Rejected</span>
                    <div class="btn-particles"></div>
                </button>
            </div>
        </div>
    </div>
</main>

<style>
.admin-report-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
}

.report-details,
.admin-actions {
    background: #0f3460;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.report-detail-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.detail-item.full-width {
    grid-column: 1 / -1;
}

.detail-item label {
    font-weight: 600;
    color: #555;
}

.detail-item span {
    color: #333;
}

.description-box {
    background-color: #0f3460;
    padding: 1rem;
    border-radius: 5px;
    border-left: 4px solid #3498db;
    white-space: pre-wrap;
}

.evidence-section {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    background-color: #f8f9fa;
    border-radius: 5px;
}

.evidence-section a {
    color: #3498db;
    text-decoration: none;
}

.evidence-section a:hover {
    text-decoration: underline;
}

.update-form {
    margin-bottom: 2rem;
}

.previous-response {
    background-color: #e8f5e8;
    border: 1px solid #c3e6cb;
    border-radius: 5px;
    padding: 1rem;
}

.previous-response p {
    margin-bottom: 0.5rem;
    color: #155724;
}

.previous-response small {
    color: #6c757d;
}

.action-history {
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.1), rgba(75, 0, 130, 0.2), rgba(255, 20, 147, 0.1));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    position: relative;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.action-history::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent, rgba(255, 20, 147, 0.1), transparent);
    animation: shimmer 3s ease-in-out infinite;
    pointer-events: none;
}

.action-history h3 {
    color: #fff;
    text-shadow: 0 0 20px rgba(255, 20, 147, 0.8);
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
    text-align: center;
}

.quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
}

.quick-action-btn {
    position: relative;
    padding: 1rem 1.5rem;
    border: none;
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.2), rgba(75, 0, 130, 0.3));
    color: #fff;
    border-radius: 15px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    min-height: 60px;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.quick-action-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.quick-action-btn:hover::before {
    left: 100%;
}

.btn-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 15px;
    opacity: 0;
    transition: opacity 0.3s;
}

.review-btn {
    background: linear-gradient(135deg, rgba(52, 152, 219, 0.3), rgba(41, 128, 185, 0.4));
    border-color: rgba(52, 152, 219, 0.5);
}

.review-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 30px rgba(52, 152, 219, 0.4), 0 0 30px rgba(52, 152, 219, 0.3);
}

.review-btn .btn-glow {
    background: radial-gradient(circle, rgba(52, 152, 219, 0.4), transparent);
}

.review-btn:hover .btn-glow {
    opacity: 1;
}

.resolved-btn {
    background: linear-gradient(135deg, rgba(46, 204, 113, 0.3), rgba(39, 174, 96, 0.4));
    border-color: rgba(46, 204, 113, 0.5);
}

.resolved-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 30px rgba(46, 204, 113, 0.4), 0 0 30px rgba(46, 204, 113, 0.3);
}

.resolved-btn .btn-glow {
    background: radial-gradient(circle, rgba(46, 204, 113, 0.4), transparent);
}

.resolved-btn:hover .btn-glow {
    opacity: 1;
}

.rejected-btn {
    background: linear-gradient(135deg, rgba(231, 76, 60, 0.3), rgba(192, 57, 43, 0.4));
    border-color: rgba(231, 76, 60, 0.5);
}

.rejected-btn:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 15px 30px rgba(231, 76, 60, 0.4), 0 0 30px rgba(231, 76, 60, 0.3);
}

.rejected-btn .btn-glow {
    background: radial-gradient(circle, rgba(231, 76, 60, 0.4), transparent);
}

.rejected-btn:hover .btn-glow {
    opacity: 1;
}

.btn-particles {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    opacity: 0;
    transform: translate(-50%, -50%);
    animation: particles 2s infinite;
}

.quick-action-btn:hover .btn-particles {
    opacity: 1;
}

@keyframes particles {
    0% {
        transform: translate(-50%, -50%) scale(0);
        opacity: 1;
    }
    50% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.8;
    }
    100% {
        transform: translate(-50%, -50%) scale(0);
        opacity: 0;
    }
}

@keyframes shimmer {
    0%, 100% {
        transform: translateX(-100%);
    }
    50% {
        transform: translateX(100%);
    }
}

@media (max-width: 768px) {
    .admin-report-container {
        grid-template-columns: 1fr;
    }
    
    .quick-actions {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .quick-action-btn {
        padding: 1.2rem;
        font-size: 1rem;
    }
}
</style>

<script>
function setStatus(status, response) {
    // Set the form values
    document.getElementById('status').value = status;
    document.getElementById('admin_response').value = response;
    
    // Auto-submit the form
    document.querySelector('.update-form').submit();
}
</script>

<%- include('../partials/footer') %>