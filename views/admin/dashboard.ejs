<%- include('../partials/header') %>

<main class="main-content">
    <div class="form-container">
        <div class="form-header">
            <h1 style="animation: 0.3s ease-in-out 0s 1 normal none running glitch;">âš¡ Admin Dashboard</h1>
            <p>Cybercrime Reports Management System</p>
        </div>

        <div class="dashboard-stats">
            <div class="stat-card">
                <div class="stat-glow"></div>
                <i class="fas fa-file-alt"></i>
                <div class="stat-info">
                    <h3><%= stats.total || 0 %></h3>
                    <p>Total Reports</p>
                </div>
                <div class="stat-particles"></div>
            </div>
            <div class="stat-card pending-card">
                <div class="stat-glow"></div>
                <i class="fas fa-clock"></i>
                <div class="stat-info">
                    <h3><%= stats.pending || 0 %></h3>
                    <p>Pending</p>
                </div>
                <div class="stat-particles"></div>
            </div>
            <div class="stat-card review-card">
                <div class="stat-glow"></div>
                <i class="fas fa-eye"></i>
                <div class="stat-info">
                    <h3><%= stats.review || 0 %></h3>
                    <p>Under Review</p>
                </div>
                <div class="stat-particles"></div>
            </div>
            <div class="stat-card resolved-card">
                <div class="stat-glow"></div>
                <i class="fas fa-check-circle"></i>
                <div class="stat-info">
                    <h3><%= stats.resolved || 0 %></h3>
                    <p>Resolved</p>
                </div>
                <div class="stat-particles"></div>
            </div>
        </div>

        <div class="dashboard-actions">
            <a href="/admin/reports" class="quantum-btn primary-btn">
                <div class="btn-glow"></div>
                <i class="fas fa-list"></i>
                <span>View All Reports</span>
                <div class="btn-particles"></div>
            </a>
            <a href="/admin/tips" class="quantum-btn secondary-btn">
                <div class="btn-glow"></div>
                <i class="fas fa-lightbulb"></i>
                <span>Manage Tips</span>
                <div class="btn-particles"></div>
            </a>
        </div>

        <div class="admin-content">
            <div class="recent-reports">
                <h2 style="color: #fff; text-shadow: 0 0 20px rgba(255, 20, 147, 0.8); margin-bottom: 1.5rem;">ðŸ“Š Recent Reports</h2>
                <% if (recentReports.length > 0) { %>
                    <div class="reports-list">
                        <% recentReports.forEach(function(report) { %>
                        <div class="report-card">
                            <div class="card-glow"></div>
                            <div class="report-info">
                                <h4><%= report.incident_type %></h4>
                                <p><strong>Reporter:</strong> <%= report.user_name %></p>
                                <p><%= report.description.substring(0, 100) %>...</p>
                                <small>
                                    <i class="fas fa-calendar"></i> <%= new Date(report.created_at).toLocaleDateString() %>
                                    | <i class="fas fa-clock"></i> Incident: <%= new Date(report.incident_date).toLocaleDateString() %>
                                </small>
                            </div>
                            <div class="report-status">
                                <span class="status-badge status-<%= report.status %>">
                                    <%= report.status.charAt(0).toUpperCase() + report.status.slice(1) %>
                                </span>
                                <a href="/admin/report/<%= report.id %>" class="quantum-btn review-btn">
                                    <i class="fas fa-eye"></i> Review
                                </a>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <div class="text-center">
                        <a href="/admin/reports" class="quantum-btn outline-btn">View All Reports</a>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <h3>No reports yet</h3>
                        <p>New cybercrime reports will appear here</p>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="admin-stats-chart">
            <h2 style="color: #fff; text-shadow: 0 0 20px rgba(255, 20, 147, 0.8);">ðŸ“ˆ Reports Overview</h2>
            <div class="chart-container">
                <div class="chart-bar">
                    <div class="bar-item">
                        <div class="bar-label">Pending</div>
                        <div class="bar-visual">
                            <div class="bar-fill pending" style="width: <%= stats.total > 0 ? (stats.pending / stats.total * 100) : 0 %>%"></div>
                        </div>
                        <div class="bar-value"><%= stats.pending || 0 %></div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">Under Review</div>
                        <div class="bar-visual">
                            <div class="bar-fill review" style="width: <%= stats.total > 0 ? (stats.review / stats.total * 100) : 0 %>%"></div>
                        </div>
                        <div class="bar-value"><%= stats.review || 0 %></div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">Resolved</div>
                        <div class="bar-visual">
                            <div class="bar-fill resolved" style="width: <%= stats.total > 0 ? (stats.resolved / stats.total * 100) : 0 %>%"></div>
                        </div>
                        <div class="bar-value"><%= stats.resolved || 0 %></div>
                    </div>
                    <div class="bar-item">
                        <div class="bar-label">Rejected</div>
                        <div class="bar-visual">
                            <div class="bar-fill rejected" style="width: <%= stats.total > 0 ? (stats.rejected / stats.total * 100) : 0 %>%"></div>
                        </div>
                        <div class="bar-value"><%= stats.rejected || 0 %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
.dashboard-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
}

.stat-card {
    position: relative;
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.1), rgba(75, 0, 130, 0.2), rgba(255, 20, 147, 0.1));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    text-align: center;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.stat-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4), 0 0 40px rgba(255, 20, 147, 0.3);
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent, rgba(255, 20, 147, 0.1), transparent);
    animation: shimmer 3s ease-in-out infinite;
    pointer-events: none;
}

.stat-glow {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 20px;
    opacity: 0;
    transition: opacity 0.3s;
    background: radial-gradient(circle, rgba(255, 20, 147, 0.2), transparent);
}

.stat-card:hover .stat-glow {
    opacity: 1;
}

.stat-card i {
    font-size: 3rem;
    color: #fff;
    margin-bottom: 1rem;
    text-shadow: 0 0 20px rgba(255, 20, 147, 0.8);
}

.stat-info h3 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #fff;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.stat-info p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.pending-card {
    background: linear-gradient(135deg, rgba(243, 156, 18, 0.2), rgba(230, 126, 34, 0.3));
}

.review-card {
    background: linear-gradient(135deg, rgba(52, 152, 219, 0.2), rgba(41, 128, 185, 0.3));
}

.resolved-card {
    background: linear-gradient(135deg, rgba(46, 204, 113, 0.2), rgba(39, 174, 96, 0.3));
}

.dashboard-actions {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.quantum-btn {
    position: relative;
    padding: 1rem 2rem;
    border: none;
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.2), rgba(75, 0, 130, 0.3));
    color: #fff;
    border-radius: 15px;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    overflow: hidden;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.quantum-btn:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 15px 30px rgba(255, 20, 147, 0.4), 0 0 30px rgba(255, 20, 147, 0.3);
    color: #fff;
    text-decoration: none;
}

.primary-btn {
    background: linear-gradient(135deg, rgba(52, 152, 219, 0.3), rgba(41, 128, 185, 0.4));
}

.secondary-btn {
    background: linear-gradient(135deg, rgba(155, 89, 182, 0.3), rgba(142, 68, 173, 0.4));
}

.admin-content {
    margin-bottom: 3rem;
}

.reports-list {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.report-card {
    position: relative;
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.1), rgba(75, 0, 130, 0.2), rgba(255, 20, 147, 0.1));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    overflow: hidden;
}

.report-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(255, 20, 147, 0.2);
}

.report-info h4 {
    color: #fff;
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.report-info p {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.5rem;
}

.report-info small {
    color: rgba(255, 255, 255, 0.6);
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: rgba(255, 255, 255, 0.7);
}

.empty-state i {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: rgba(255, 255, 255, 0.3);
}

.admin-stats-chart {
    background: linear-gradient(135deg, rgba(139, 69, 19, 0.1), rgba(75, 0, 130, 0.2), rgba(255, 20, 147, 0.1));
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.admin-stats-chart h2 {
    text-align: center;
    margin-bottom: 2rem;
}

.chart-container {
    max-width: 600px;
    margin: 0 auto;
}

.bar-item {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
    gap: 1rem;
}

.bar-label {
    width: 100px;
    font-weight: 600;
    color: #fff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

.bar-visual {
    flex: 1;
    height: 30px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    overflow: hidden;
    backdrop-filter: blur(10px);
}

.bar-fill {
    height: 100%;
    border-radius: 15px;
    transition: width 0.5s ease;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
}

.bar-fill.pending {
    background: linear-gradient(90deg, #f39c12, #e67e22);
}

.bar-fill.review {
    background: linear-gradient(90deg, #3498db, #2980b9);
}

.bar-fill.resolved {
    background: linear-gradient(90deg, #27ae60, #229954);
}

.bar-fill.rejected {
    background: linear-gradient(90deg, #e74c3c, #c0392b);
}

.bar-value {
    width: 40px;
    text-align: center;
    font-weight: bold;
    color: #fff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
}

@keyframes shimmer {
    0%, 100% {
        transform: translateX(-100%);
    }
    50% {
        transform: translateX(100%);
    }
}

@media (max-width: 768px) {
    .dashboard-stats {
        grid-template-columns: 1fr;
    }
    
    .dashboard-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .report-card {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }
}
</style>

<%- include('../partials/footer') %>