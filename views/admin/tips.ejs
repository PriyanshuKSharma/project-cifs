<%- include('../partials/header') %>

<main class="main-content">
    <div class="container">
        <div class="dashboard-header">
            <h1><i class="fas fa-lightbulb"></i> Manage Prevention Tips</h1>
            <p>Create and manage cybersecurity prevention tips for users</p>
        </div>

        <div class="tips-management">
            <div class="add-tip-section">
                <h2>Add New Tip</h2>
                <form action="/admin/tips" method="POST" class="tip-form">
                    <div class="form-group">
                        <label for="title">Tip Title *</label>
                        <input type="text" id="title" name="title" required 
                               placeholder="Enter a descriptive title for the tip">
                    </div>
                    
                    <div class="form-group">
                        <label for="content">Tip Content *</label>
                        <textarea id="content" name="content" rows="4" required 
                                  placeholder="Provide detailed prevention advice and best practices..."></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Tip
                    </button>
                </form>
            </div>

            <div class="existing-tips">
                <h2>Existing Tips</h2>
                <% if (tips.length > 0) { %>
                    <div class="tips-list">
                        <% tips.forEach(function(tip) { %>
                        <div class="tip-item">
                            <div class="tip-content">
                                <h4><%= tip.title %></h4>
                                <p><%= tip.content %></p>
                                <small class="tip-date">
                                    <i class="fas fa-calendar"></i> 
                                    Created: <%= new Date(tip.created_at).toLocaleDateString() %>
                                </small>
                            </div>
                            <div class="tip-actions">
                                <button class="btn btn-sm btn-secondary" onclick="editTip(<%= tip.id %>, '<%= tip.title.replace(/'/g, "\\'") %>', '<%= tip.content.replace(/'/g, "\\'").replace(/\n/g, '\\n') %>')">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <form action="/admin/tips/<%= tip.id %>/delete" method="POST" style="display: inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this tip?')">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-lightbulb"></i>
                        <h3>No tips created yet</h3>
                        <p>Start by adding your first cybersecurity prevention tip</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<!-- Edit Tip Modal -->
<div id="editModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Tip</h3>
            <span class="close" onclick="closeModal()">&times;</span>
        </div>
        <form id="editForm" method="POST" class="modal-form">
            <div class="form-group">
                <label for="editTitle">Tip Title *</label>
                <input type="text" id="editTitle" name="title" required>
            </div>
            
            <div class="form-group">
                <label for="editContent">Tip Content *</label>
                <textarea id="editContent" name="content" rows="4" required></textarea>
            </div>
            
            <div class="modal-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Tip
                </button>
                <button type="button" class="btn btn-secondary" onclick="closeModal()">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<style>
.tips-management {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
}

.add-tip-section,
.existing-tips {
    background: white;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.add-tip-section h2,
.existing-tips h2 {
    color: #2c3e50;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #3498db;
}

.tip-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.tips-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.tip-item {
    padding: 1.5rem;
    border: 1px solid #eee;
    border-radius: 8px;
    background-color: #f8f9fa;
}

.tip-content h4 {
    color: #2c3e50;
    margin-bottom: 0.75rem;
}

.tip-content p {
    color: #555;
    margin-bottom: 1rem;
    line-height: 1.6;
}

.tip-date {
    color: #6c757d;
    font-style: italic;
}

.tip-actions {
    margin-top: 1rem;
    display: flex;
    gap: 0.5rem;
}

.btn-danger {
    background-color: #e74c3c;
    color: white;
}

.btn-danger:hover {
    background-color: #c0392b;
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}

.modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 0;
    border-radius: 10px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
}

.modal-header {
    padding: 1.5rem;
    border-bottom: 1px solid #eee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-header h3 {
    margin: 0;
    color: #2c3e50;
}

.close {
    font-size: 1.5rem;
    cursor: pointer;
    color: #999;
}

.close:hover {
    color: #333;
}

.modal-form {
    padding: 1.5rem;
}

.modal-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 1.5rem;
}

@media (max-width: 768px) {
    .tips-management {
        grid-template-columns: 1fr;
    }
    
    .tip-actions {
        flex-direction: column;
    }
    
    .modal-content {
        width: 95%;
        margin: 10% auto;
    }
}
</style>

<script>
function editTip(id, title, content) {
    document.getElementById('editTitle').value = title;
    document.getElementById('editContent').value = content;
    document.getElementById('editForm').action = `/admin/tips/${id}/update`;
    document.getElementById('editModal').style.display = 'block';
}

function closeModal() {
    document.getElementById('editModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('editModal');
    if (event.target === modal) {
        modal.style.display = 'none';
    }
}
</script>

