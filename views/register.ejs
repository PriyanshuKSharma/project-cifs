<%- include('partials/header') %>

<main class="main-content">
    <div class="auth-container">
        <div class="auth-card fade-in-up">
            <div class="auth-header">
                <div style="text-align: center; margin-bottom: 1rem;">
                    <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem;">
                        <i class="fas fa-user-shield" style="font-size: 2rem; color: white;"></i>
                    </div>
                </div>
                <h2 style="color: #2d3748; margin-bottom: 0.5rem; font-family: 'Poppins', sans-serif;">ðŸŽ† Join CyberGuard</h2>
                <p style="color: #718096;">Start your journey to digital safety</p>
            </div>
            
            <form action="/register" method="POST" class="auth-form">
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone">
                </div>
                
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required minlength="6">
                </div>
                
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required minlength="6">
                </div>
                
                <button type="submit" class="btn btn-primary btn-full">Register</button>
            </form>
            
            <div class="auth-footer">
                <p style="text-align: center; color: #718096;">Already protected? <a href="/login" style="color: #667eea; font-weight: 600; text-decoration: none;">Sign In â†’</a></p>
                <div style="text-align: center; margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid rgba(113,128,150,0.2);">
                    <div style="display: flex; justify-content: center; gap: 1rem; flex-wrap: wrap;">
                        <small style="color: #a0aec0; display: flex; align-items: center; gap: 0.25rem;">
                            <i class="fas fa-check" style="color: #48bb78;"></i> Free Forever
                        </small>
                        <small style="color: #a0aec0; display: flex; align-items: center; gap: 0.25rem;">
                            <i class="fas fa-check" style="color: #48bb78;"></i> 24/7 Support
                        </small>
                        <small style="color: #a0aec0; display: flex; align-items: center; gap: 0.25rem;">
                            <i class="fas fa-check" style="color: #48bb78;"></i> Secure & Private
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>