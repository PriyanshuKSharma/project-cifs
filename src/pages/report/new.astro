---
layout: ../../layouts/Layout.astro
---

<Layout title="File a Report">
  <section class="max-w-2xl mx-auto py-12">
    <div class="card">
      <h2 class="text-3xl font-bold mb-6">File a Cybercrime Report</h2>
      <form action="/report/new" method="post" enctype="multipart/form-data" class="space-y-4">
      <div>
        <label for="incident_type">Incident Type</label>
        <select id="incident_type" name="incident_type" class="input">
          <option>Phishing</option>
          <option>Cyberbullying</option>
          <option>Identity Theft</option>
          <option>Financial Scam</option>
          <option>Other</option>
        </select>
      </div>
      <div>
        <label for="incident_date">Incident Date</label>
        <input id="incident_date" name="incident_date" type="date" class="input" />
      </div>
      <div>
        <label for="description">Description</label>
        <textarea id="description" name="description" required class="input"></textarea>
      </div>
      <div>
        <label for="evidence">Evidence (optional)</label>
        <input id="evidence" name="evidence" type="file" accept="image/*,application/pdf" />
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Submit Report</button>
      </div>
      </form>
    </div>
  </section>
</Layout>
